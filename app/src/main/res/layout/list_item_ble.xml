<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_list_item_height"
        android:background="@drawable/ripple_effect"
        >

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ble_item_text"
            android:text="#device#"
            style="@style/List_Title_style"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/ble_item_mac_text"
            android:layout_marginTop="8dp"/>
    <TextView
            android:id="@+id/ble_item_mac_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="#MAC Addr#"
            style="@style/List_SubTitle_style"
            app:layout_constraintTop_toBottomOf="@+id/ble_item_text"
            app:layout_constraintBottom_toBottomOf="parent" tools:layout_editor_absoluteX="-16dp"
            android:layout_marginBottom="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>